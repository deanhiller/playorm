<ivysettings>
    <credentials host="oss.sonatype.org" realm="Sonatype Nexus Repository Manager" username="${ossuser}" passwd="${osspasswd}"/>
    <property name="nexus-staging" value="https://oss.sonatype.org/service/local/staging/deploy/maven2/"/>    
    <settings defaultResolver="chained"/>
    <resolvers>
        <chain name="chained" returnFirst="true">
            <ibiblio name="ibiblio" m2compatible="true"/>
            <ibiblio name="java-net-maven1" root="http://download.java.net/maven/1" pattern="${java.net.maven.pattern}" m2compatible="false"/>
            <ibiblio name="java-net-maven2" root="http://download.java.net/maven/2/" m2compatible="true"/>
        </chain>   
    </resolvers>
    <resolvers>
    	<ibiblio name="nexus-staging" m2compatible="true" root="${nexus-staging}"/>
   </resolvers>    
</ivysettings>